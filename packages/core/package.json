{
  "name": "@template/core",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:clean": "pnpm clean:build && pnpm build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:clean": "pnpm clean:test && pnpm test",
    "clean": "pnpm clean:build && pnpm clean:test",
    "clean:build": "rimraf ./dist ./tsconfig*.tsbuildinfo",
    "clean:test": "jest --clearCache && rimraf ./coverage"
  },
  "dependencies": {
    "@template/tsconfig": "workspace:*",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@template/eslint": "workspace:*",
    "@template/jest": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
